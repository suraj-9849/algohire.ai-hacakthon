{
  "extends": [
    "eslint:recommended",
    "next/core-web-vitals"
  ],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "no-unused-vars": "off",
    "no-undef": "off",
    "react/react-in-jsx-scope": "off",
    "react/no-unescaped-entities": "off",
    "no-console": "off",
    "prefer-const": "warn"
  },
  "ignorePatterns": [
    ".next/",
    "node_modules/",
    "dist/",
    "*.config.js",
    "*.config.mjs"
  ],
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "globals": {
    "React": "readonly",
    "JSX": "readonly"
  }
} 